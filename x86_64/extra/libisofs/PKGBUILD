pkgname=libisofs
pkgver=1.5.4
pkgrel=1
arch=('x86_64')
depends=(glibc)
source=(https://files.libburnia-project.org/releases/libisofs-$pkgver.tar.gz
	efi_boot_size.patch)

prepare() {
	cd $pkgname

	patch -p0 -i ../efi_boot_size.patch
}

build() {
        cd $pkgname
	
	./bootstrap
	./configure --prefix=/usr         \
	            --bindir=/bin         \
	            --sysconfdir=/etc      \
	            --docdir=/usr/share/doc/nano
        make
}

package() {
	cd $pkgname
	make DESTDIR=$pkgdir install
}
