pkgname=ruby
pkgver=3.2.1
pkgrel=1
arch=(x86_64)
depends=(libyaml)
source=(https://cache.ruby-lang.org/pub/$pkgname/3.2/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver
	./configure --prefix=/usr      \
				--enable-shared    \
				--without-valgrind \
				--docdir=/usr/share/doc/ruby-3.2.1
	make  && make capi
}

package() {
	cd $pkgname-$pkgver
	
	make DESTDIR=$pkgdir install
}