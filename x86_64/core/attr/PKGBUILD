pkgname=attr
pkgver=2.5.1
arch=('x86_64')
pkgrel=1
depends=(glibc)
source=(https://download.savannah.gnu.org/releases/$pkgname/$pkgname-$pkgver.tar.gz)

build() {
        cd $pkgname-$pkgver

        ./configure \
        --prefix=/usr \
        --bindir=/bin \
        --sysconfdir=/etc
        make
}

package() {
	cd $pkgname-$pkgver

        make DESTDIR=$pkgdir install

        ln -sfv ../../lib/$(readlink $pkgdir/usr/lib/libattr.so) $pkgdir/usr/lib/libattr.so
}
